{
   "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "sourceMap": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
   },
   "files": [
      "typings.d.ts"
   ],
   "include": [
      "src/**/*.ts",
      "index.d.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}